{
  "name": "starter-project",
  "version": "1.0.0",
  "description": "project description here.",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "postcss": "postcss -r dist/css/*",
    "lint": "eslint src/js",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "imagemin": "imagemin src/images dist/images -p",
    "icons": "svgo -f src/images/icons && mkdir -p dist/images && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
    "serve": "browser-sync start --server --files '/dist/css/*.css, /dist/js/*.js, /**/*.html'",
    "build:css": "npm run scss && npm run postcss",
    "build:js": "npm run lint && npm run uglify",
    "build:images": "npm run imagemin && npm run icons",
    "build:all": "npm run build:css && npm run build:js && npm run build:images",
    "watch:css": "onchange 'src/scss/**/*.scss' -- npm run build:css",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run build:js",
    "watch:all": "run-p serve watch:css watch:js"
  },
  "author": "Ruhollah Hosseini",
  "repository": {
    "type": "git",
    "url": "https://github.com/4quila/starter-project"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "browser-sync": "^2.26.13",
    "cssnano": "^4.1.10",
    "eslint": "^7.11.0",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss": "^8.1.2",
    "postcss-cli": "^8.1.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.3.2",
    "uglify-js": "^3.11.2"
  },
  "dependencies": {
    "tailwindcss": "^1.9.4"
  }
}
